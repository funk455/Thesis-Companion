{
  "name": "local-thesis",
  "version": "1.0.0",
  "description": "Privacy-First Academic Writing Environment",
  "author": "LocalThesis User",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.localthesis.app",
    "productName": "LocalThesis",
    "files": [
      "**/*",
      "!dist",
      "!node_modules",
      "!*.ts",
      "!*.tsx"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg"]
    },
    "win": {
      "target": "portable",
      "icon": "icon.svg"
    },
    "linux": {
      "target": ["AppImage"]
    }
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1"
  }
}